{
  "name": "solarpunk",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "bundle exec bridgetown build",
    "serve": "bundle exec bridgetown serve",
    "clean": "bundle exec bridgetown clean",
    "esbuild": "node esbuild.config.js --minify",
    "esbuild-dev": "node esbuild.config.js --watch",
    "deploy": "yarn clean && yarn webpack-build && yarn build",
    "sync": "node sync.js",
    "start": "node start.js"
  },
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "concurrently": "^5.2.0",
    "esbuild": "^0.14.46",
    "glob": "^8.0.3",
    "postcss": "^8.4.14",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^14.1.0",
    "postcss-load-config": "^4.0.1",
    "postcss-preset-env": "^7.7.1",
    "purgecss": "^4.1.3",
    "tailwindcss": "^3.0.7",
    "tailwindcss-flip": "^1.0.0"
  },
  "resolutions": {
    "postcss-focus-within": "^4.0.0"
  },
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "daisyui": "^1.19.0",
    "stimulus": "^3.0.1"
  }
}
